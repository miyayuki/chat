<h2>create new group</h2>

<ul class="users">
  <%= form_tag :action => :create do %>
    <% @users.each do |user| %>
		  <li>
        <%= check_box_tag "group_users[]", user.id, false %>
        <%= user.username %>
		  </li>
    <% end %>
    group name: <%= text_field "group", :name %>
    <%= submit_tag '作成' %>
  <% end %>
</ul>

